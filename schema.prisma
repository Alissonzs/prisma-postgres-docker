datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Course {
  id      Int      @id @default(autoincrement())
  name    String
  modules Module[]
}

model Module {
  id       Int    @id @default(autoincrement())
  title    String
  courseId Int
  course   Course @relation(fields: [courseId], references: [id])
}
